# Compiler gcc flags
CFLAGS = -Wall -pedantic -Werror -Wextra -std=gnu89
CC = gcc
SRC = main.c school.c
OBJ = main.o school.o
NAME = school

# Compiler rules
all: school

school: $(NAME)
	$(CC) $(CFLAGS) objects -o $(NAME)

objects: $(SRC) m.h
	$(CC) $(CFLAGS) -c $(SRC)

# PHONY: to remove .o files post-compiler
clean:
	rm -f school *.o
