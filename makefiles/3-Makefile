# Compiler gcc flags
CFLAGS = -Wall -pedantic -Werror -Wextra -std=gnu89
CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f

# Compiler rules
all: $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

# Other rules
clean:
	$(RM) *.swp *~

oclean:
	$(RM) *.o

fclean: clean oclean

re: oclean all
